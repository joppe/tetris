{
    "compilerOptions": {
        "baseUrl": "./",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@apestaartje/*": [
                "./src/lib/*"
            ],
            "@tetris/*": [
                "./src/tetris/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "include": [
        "src/**/*.ts"
    ]
}
